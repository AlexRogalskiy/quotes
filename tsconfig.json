{
    "compilerOptions": {
        "strict": false,
        "allowJs": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "isolatedModules": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "target": "ES2018",
        "module": "commonjs",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "declarationMap": true,
        "skipDefaultLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/tests/**/*",
        "**/*.test.ts"
    ],
    "include": [
        "hero-patterns.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}
