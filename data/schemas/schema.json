{
    "$id": "https://github.com/AlexRogalskiy/quotes/blob/master/data/schemas.json",
    "description": "A representation of a collection of quote data objects",
    "type": "object",
    "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": false,
            "items": {
                "$ref": "#/$defs/quote"
            }
        }
    },
    "$defs": {
        "quote": {
            "type": "object",
            "properties": {
                "quote": {
                    "type": "string",
                    "description": "Quote text"
                },
                "author": {
                    "type": "string",
                    "description": "Quote author"
                }
            },
            "required": [
                "quote",
                "author"
            ]
        }
    }
}
